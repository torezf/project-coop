<div class="min-h-screen bg-black text-white flex flex-col items-center py-10 px-5">
  <!-- ปุ่ม BACK -->
  <div class="w-full flex justify-start">
    <%= link_to root_path, class: "inline-flex items-center gap-2 px-4 py-2 bg-black border-2 border-red-600 text-red-500 rounded-lg shadow hover:bg-red-600 hover:text-black hover:border-black transition font-bold text-lg mt-2 ml-2" do %>
      <svg class="w-5 h-5 stroke-current" fill="none" stroke="currentColor" stroke-width="3" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"></path>
      </svg>
      BACK
    <% end %>
  </div>

  <!-- หัวข้อใหญ่ -->
  <h1 class="text-5xl md:text-6xl font-bold text-red-600 drop-shadow mb-4 font-mono tracking-wider">BRAG DOCUMENT</h1>

  <!-- Profile section -->
  <div class="flex flex-col items-center mb-8">
    <%= image_tag "profile.jpg",
      alt: "Profile",
      class: "w-44 h-44 md:w-56 md:h-56 rounded-full border-4 border-red-600 object-cover mb-5 shadow-lg" %>
    <h2 class="text-2xl md:text-3xl tracking-widest font-mono font-semibold mb-1 text-gray-200 text-center">
      Prakit<br/>Aroonkitcharoen
    </h2>
    <div class="text-3xl md:text-4xl font-extrabold text-white italic mb-2 font-mono">TOR</div>
  </div>

  <!-- กล่องรายการ Brag -->
  <div class="w-full max-w-2xl bg-gray-900 p-6 rounded-xl border-l-4 border-red-600 shadow-xl space-y-2">
    <% 10.times do |i| %>
      <p class="text-white font-mono">• Example todo item <%= i + 1 %></p>
    <% end %>
  </div>
</div>