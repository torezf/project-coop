<%= form_with(model: todolist, class: "contents") do |form| %>
  <% if todolist.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(todolist.errors.count, "error") %> prohibited this todolist from being saved:</h2>

      <ul class="list-disc ml-6">
        <% todolist.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :content %>
    <%= form.text_field :content, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": todolist.errors[:content].none?, "border-red-400 focus:outline-red-600": todolist.errors[:content].any?}] %>
  </div>

  <div class="my-5 flex items-center gap-2">
    <%= form.label :checklist %>
    <%= form.checkbox :checklist, class: ["block shadow-sm rounded-md border order-first h-5 w-5", {"border-gray-400 focus:outline-blue-600": todolist.errors[:checklist].none?, "border-red-400 focus:outline-red-600": todolist.errors[:checklist].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
