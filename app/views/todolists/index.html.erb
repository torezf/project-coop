<div class="flex min-h-screen bg-gray-100">
  <!-- Left side: Profile + Todolist -->
  <div class="w-full flex flex-col items-center bg-white py-8 border-r-4 border-red-500 shadow-lg">
    <!-- Profile Section -->
    <div class="flex flex-col items-center w-full px-8">
      <h1 class="text-5xl md:text-7xl font-bold text-red-600 drop-shadow mb-4 font-mono tracking-wider">
        MY PROFILE
      </h1>
      <div class="w-52 h-52 md:w-64 md:h-64 rounded-full overflow-hidden border-4 border-red-500 mt-4 mb-3">
        <%= image_tag("profile.jpg", alt: "Profile", class: "object-cover w-full h-full") %>
      </div>
      <div class="text-center mt-8">
        <h2 class="text-3xl md:text-4xl tracking-widest font-semibold mb-2 text-gray-700">
          Prakit<br/>
          Aroonkitcharoen
        </h2>
        <div class="text-4xl font-extrabold text-black italic mb-4">TOR</div>
        <%= link_to "My Brag Document", brag_path, class: "inline-block px-8 py-4 bg-black text-white border-2 border-red-600 rounded transition hover:bg-red-600 hover:text-black hover:border-black shadow-md font-semibold tracking-wider text-xl" %>
      </div>
    </div>
    <div class="w-full px-8 mt-10 flex flex-col items-center">
      <div class="w-full max-w-xl mx-auto">
        <h2 class="text-2xl text-red-600 mb-1 font-mono font-bold tracking-wider">TODO LIST</h2>
        <hr class="border-red-600 mb-4"/>
        <!-- Todolist Input -->
        <!-- Input form -->
        <%= form_with( model: Todolist.new, class: "flex mb-4", local: true) do |f| %>
          <%= f.text_field :content, placeholder: "Type something .....", class: "flex-1 px-4 py-2 border-2 border-red-600 rounded-l-lg focus:outline-none bg-black text-white font-mono" %>
          <%= f.button type: "submit", class: "bg-red-600 px-3 py-2 rounded-r-lg text-white hover:bg-red-700 text-lg font-mono", title: "Add" do %>
            <i class="fa fa-plus"></i>
            +
          <% end %>
        <% end %>
        <ul class="space-y-2">
          <% @todolists.each do |item| %>
            <li class="flex items-center bg-black text-white rounded-lg px-3 py-2 justify-between border-2 border-red-600 <%= 'line-through opacity-70' if item.checklist? %>">
              <div class="break-words whitespace-normal max-w-xs md:max-w-md">
                <%= item.content %>
              </div>
              <div class="flex gap-2 shrink-0">
                <% if item.checklist? %>
                  <%= button_to todolist_path(item), method: :patch, params: { todolist: { checklist: false } }, title: "Unmark" do %>
                    üëÄ
                  <% end %>
                <% else %>
                  <%= button_to todolist_path(item), method: :patch, params: { todolist: { checklist: true } }, title: "Mark complete" do %>
                    ‚úÖ
                  <% end %>
                <% end %>
                <%= button_to todolist_path(item), method: :delete, title: 'Delete' do %>
                  ‚ùå
                <% end %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>